{% extends 'base.html.twig' %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
{% include "layouts/nav_head_produit.html.twig" %}
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <br>
        <div class="container-fluid">

            <div class="col-md-12">

                <div class="card">

                    <table class=" table-head-fixed">
                        <thead class="table table-primary table-head-fixed">
                            <tr>
                                <td colspan='2'>Nouvelle(s) Commande(s)</td>
                            </tr>

                        </thead>
                    </table>


                    <div class="card-body table-responsive p-0" style="height:370px;">
                        <table class="table table-head-fixed">

                            <form action="{{ path('achat_new') }}" method="post">

                                <tbody class="table table-bordered">
                                    <tr>
                                        <th>ID</th>
                                        <th>Produit</th>
                                        <th>Qte</th>
                                        <th>Unit√© d'achat</th>
                                        <th>Date de livraison</th>
                                    </tr>
                                    <br>

                                    <select name="" id="famille" class="form-control col-md-4">
                                        {% for famille in familles %}
                                        <option value="{{famille.id }}">
                                            {{famille.nom }}
                                        </option>
                                        {% endfor %}
                                    </select>
                                    <br>
                                    {% for produit in produits %}
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="produit_id[]" value="{{produit.id}}" class=""
                                                id="">
                                        </td>
                                        <td>
                                             {{ produit.nom }}
                                            <input type="hidden" name="produit_name[]" value="{{produit.id}}"
                                                class="form-control" id="">
                                        </td>
                                        <td>
                                            <input type="number" name="quantite[]" class="form-control" id="">
                                        </td>
                                        <td>
                                            {{ produit.uniteAchat.nomuval }}
                                        </td>
                                        <td><input type="date" name="date_commande[]" class="form-control" id="">
                                        </td>

                                    </tr>
                                    {% endfor %}

                                </tbody>
                        </table>
                        <br>
                        <button type="submit" name="enregistrer" class="btn btn-success offset-4">Enregistrer
                            la commande</button>
                        </form>
                    </div>
                    <!-- /.card -->
                    <br>
                </div>

            </div>
        </div>
</div>

</section>
</div>

{% endblock %}